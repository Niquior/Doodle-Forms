@model Doodle_Forms.Models.Account.LoginUserViewModel;
@{
    ViewData["Title"] = "Login";
}

<div class="foreground">
    <h1>Logging In</h1>
    <hr />
    <div class="row">
        <div  class="col-md-4">
            <form asp-controller="Account" asp-action="Login" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group item">
                    <input asp-for="Email" class="form-control" placeholder="Email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group item">
                    <input asp-for="Password" class="form-control" type="password" placeholder="Password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group item">
                    <input type="submit" value="Login" class="btn btn-primary" required />
                </div>
            </form>
        </div>
    </div>
    <div>
        <a asp-controller="Home" asp-action="Index" class="item">Back to List</a>
    </div>
</div>




