@model Doodle_Forms.Models.Account.RegisterUserViewModel;

@{
    ViewData["Title"] = "Register";
}

<div class="foreground">
    <h1>Registration</h1>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-controller="Account" asp-action="Register" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group item">
                    <input asp-for="Name" class="form-control" placeholder="Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group item">
                    <input asp-for="Email" class="form-control" type="email" placeholder="Email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group item">
                    <input asp-for="Password" class="form-control" type="password" placeholder="Password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group item">
                    <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Confirm Password" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-group item">
                    <select asp-for="IsAdmin" class="form-control">
                        <option selected="selected" value="false">Default</option>
                        <option disabled="disabled" value="true">Administrator</option>
                    </select>
                    <span asp-validation-for="IsAdmin" class="text-danger"></span>
                </div>
                <div class="form-group item">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-controller="Home" asp-action="Index" class="item">Back to List</a>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
